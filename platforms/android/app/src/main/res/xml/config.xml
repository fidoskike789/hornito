<?xml version='1.0' encoding='utf-8'?>
<widget id="com.imc.fichatecnica" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="FileTransfer">
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
    </feature>
    <feature name="OneSignalPush">
        <param name="android-package" value="com.plugin.gcm.OneSignalPush" />
    </feature>
    <name>FichaTecnica</name>
    <description>
        Hornipan - Ficha TÃ©cnica.
    </description>
    <author email="oamontalvop@gmail.com" href="http://phonegap.com">
        Equipo de Desarrollo
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="icon.png" />
    <icon density="ldpi" src="res/icon/android/icon.png" />
    <icon density="mdpi" src="res/icon/android/icon.png" />
    <icon density="hdpi" src="res/icon/android/icon.png" />
    <icon density="xhdpi" src="res/icon/android/icon.png" />
    <splash density="land-hdpi" src="res/screen/android/screen.png" />
    <splash density="land-ldpi" src="res/screen/android/screen.png" />
    <splash density="land-mdpi" src="res/screen/android/screen.png" />
    <splash density="land-xhdpi" src="res/screen/android/screen.png" />
    <splash density="port-hdpi" src="res/screen/android/screen.png" />
    <splash density="port-ldpi" src="res/screen/android/screen.png" />
    <splash density="port-mdpi" src="res/screen/android/screen.png" />
    <splash density="port-xhdpi" src="res/screen/android/screen.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="AppName" value="Ficha Tecnica" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="1000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="disallowOverscroll" value="true" />
</widget>
